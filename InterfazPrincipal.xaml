                                <ListBox.ContextMenu>
                                    <ContextMenu>
                                        <MenuItem x:Name="Annadir_Participante" Header="Añadir Participante" Click="Annadir_Participante_Click">
                                            <MenuItem.Icon>
                                                <Image Source="fotos/correcto.png"/>
                                            </MenuItem.Icon>
                                        </MenuItem>
                                        <MenuItem x:Name="Eliminar_Participante" Header="Eliminar Participante" Click="Eliminar_Participante_Click" >
                                            <MenuItem.Icon>
                                                <Image Source="fotos/incorrecto.png"/>
                                            </MenuItem.Icon>
                                        </MenuItem>
                                    </ContextMenu>
                                </ListBox.ContextMenu>
                                <ListBox.ItemContainerStyle>
                                    <Style TargetType="ListBoxItem">
                                        <Setter Property="Margin" Value="1"/>
                                        <Style.Triggers>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter Property="Foreground" Value="Blue"/>
                                                <Setter Property="FontWeight" Value="Bold"/>
                                                <Setter Property="BorderBrush" Value="Blue"/>
                                                <Setter Property="BorderThickness" Value="3"/>

                                            </Trigger>
                                            <Trigger Property="ItemsControl.AlternationIndex" Value="1">
                                                <Setter Property="Background" Value="LightCyan"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </ListBox.ItemContainerStyle>
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <Image x:Name="fotoSeleccion"  Width="50" Height="50" Source="{Binding foto_S}" />
                                            <TextBlock VerticalAlignment="Center" Margin="20,0,0,0" Text="{Binding nombreS}" />
                                        </StackPanel>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                            <StackPanel Orientation="Horizontal">
                                <Label Content="Nombre nuevo participante:"/>
                                <TextBox x:Name="boxNuevoP"  Width="87" Height="21"/>
                            </StackPanel>
                        </StackPanel>
                        <Separator/>
                        <Label Content="Informacion del guia" HorizontalAlignment="Center" VerticalAlignment="Center" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                        <StackPanel Height="96" Orientation="Horizontal" HorizontalAlignment="Center">
                            <ListBox x:Name="lstGuiasRuta">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <Image x:Name="fotoGuia"  Width="90" Height="90" Source="{Binding foto_G}" />
                                            <TextBlock VerticalAlignment="Center" Margin="20,0,0,0" Text="{Binding nombre_G}" />
                                        </StackPanel>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                            <TextBox x:Name="boxGuiaRuta" Width="115" Height="26"/>
                            <Button Height="25" HorizontalAlignment="Left" VerticalAlignment="Center" Click="Button_Click">
                                <Label Content="Cambiar guia" Height="33"/>
                            </Button>
                        </StackPanel>
                        <Separator/>
                        <StackPanel Orientation="Vertical">
                            <Label Content="Puntos de interes" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <ListBox x:Name="lstPuntosInteres" Height="123" Width="487" HorizontalAlignment="Center">
                                <ListBox.ContextMenu>
                                    <ContextMenu>
                                        <MenuItem x:Name="Annadir_pi" Header="Añadir Punto de interes" Click="Annadir_pi_Click">
                                            <MenuItem.Icon>
                                                <Image Source="fotos/correcto.png"/>
                                            </MenuItem.Icon>
                                        </MenuItem>
                                        <MenuItem x:Name="Eliminar_pi" Header="Eliminar Punto de interes" Click="Eliminar_pi_Click">
                                            <MenuItem.Icon>
                                                <Image Source="fotos/incorrecto.png"/>
                                            </MenuItem.Icon>
                                        </MenuItem>
                                    </ContextMenu>
                                </ListBox.ContextMenu>
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <Image x:Name="fotoSeleccion"  Width="90" Height="90" Source="{Binding foto}" />
                                            <TextBlock VerticalAlignment="Center" Margin="20,0,0,0" Text="{Binding tipo}" />
                                        </StackPanel>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Label Content="Punto e interes a añadir:"/>
                            <TextBox x:Name="boxPITipo" Width="87" Height="21"/>
                        </StackPanel>
                    </StackPanel>
                    <Button x:Name="btnGuardar_R" Visibility="Visible" Height="36" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="254,0,0,10" MouseEnter="btnGuardar_MouseEnter" MouseLeave="btnGuardar_MouseLeave" Click="btnGuardar_R_Click">
                        <StackPanel Height="36" Width="86" Orientation="Horizontal" Grid.Row="3">
                            <Image x:Name="imgGuardar_R" Height="25" Width="24" Source="fotos/guardar_bn.png"/>
                            <TextBlock TextWrapping="Wrap" Text="Guardar" Width="49" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    <Button x:Name="btnEditar_R" Visibility="Visible" Height="36" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="774,0,0,10" MouseEnter="img_cambiar_enter" MouseLeave="img_cambiar_leave" Click="btnEditar_R_Click">
                        <StackPanel Height="36" Width="86" Orientation="Horizontal" Grid.Row="3">
                            <Image x:Name="btnEditar_Ru" Height="25" Width="24" Source="fotos/editar_bn.png"/>
                            <TextBlock TextWrapping="Wrap" Text="Editar Imagen" Width="49" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    <Button x:Name="btn_salir_R" Visibility="Visible" Height="36" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,78,10" MouseEnter="btnSalir_g_MouseEnter" MouseLeave="btnSalir_g_MouseLeave" Click="btnSalir_s_click">
                        <StackPanel Height="36" Width="86" Orientation="Horizontal" Grid.Row="3">
                            <Image x:Name="img_salir_G" Height="25" Width="24" Source="fotos/salir_bn.png"/>
                            <TextBlock TextWrapping="Wrap" Text="Salir" Width="49" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </Grid>
            </TabItem>
            <TabItem x:Name="tabGuias" Header="Gestion guias">
