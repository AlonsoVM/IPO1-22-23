                                    </MenuItem.Icon>
                                </MenuItem>
                                <MenuItem x:Name="Eliminar_ruta" Header="Eliminar ruta" Click="Eliminar_ruta_click">
                                    <MenuItem.Icon>
                                        <Image Source="fotos/incorrecto.png"/>
                                    </MenuItem.Icon>
                                </MenuItem>
                            </ContextMenu>
                        </ListBox.ContextMenu>
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="Margin" Value="1"/>
                                <Style.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
