                                <Label Content="Provincia"/>
                                <TextBox x:Name="boxProvincia" Text="{Binding SelectedItem.provincia, ElementName=lstRutas}"/>
                                <Label Content="Origen"/>
                                <TextBox x:Name="boxOrigen" Text="{Binding SelectedItem.origen, ElementName=lstRutas}"/>
                                <Label Content="Destino"/>
                                <TextBox x:Name="boxDestino" Text="{Binding SelectedItem.destino, ElementName=lstRutas}"/>
                                <Label Content="Dificultad"/>
                                <TextBox x:Name="boxDificultad" Text="{Binding SelectedItem.dificultad, ElementName=lstRutas}"/>
                            </StackPanel>
                            <StackPanel Height="28" Orientation="Horizontal" Width="576" HorizontalAlignment="Center" VerticalAlignment="Center">
                                <Label Content="hora de salida"/>
                                <TextBox x:Name="h_salida" Text="{Binding SelectedItem.h_salida, ElementName=lstRutas}"/>
                                <Label Content="fecha de salida"/>
                                <TextBox x:Name="f_salida" Text="{Binding SelectedItem.fecha_salida, ElementName=lstRutas}"/>
                                <Label Content="duracion"/>
                                <TextBox x:Name="boxDuracion" Text="{Binding SelectedItem.duracion, ElementName=lstRutas}"/>
                            </StackPanel>
                        </StackPanel>
                        <Separator/>
                        <StackPanel Height="172">
                            <Label Content="Participantes" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
